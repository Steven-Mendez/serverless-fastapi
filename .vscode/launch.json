{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Local: Run & Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "fastapi",
            "args": [
                "dev",
                "main.py"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Docker: Build, Run & Debug",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "preLaunchTask": "docker-build-run-debug",
            "postDebugTask": "docker-compose-down"
        }
    ]
}